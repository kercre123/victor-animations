global proc selCoz_all_y(){
        
        string $wheels [] = {"y:y:wheel_R_ctrl", "y:y:wheel_L_ctrl"};
        string $xC_selCoz_all_y [] = {"y:y:virtual_all_ctrl", "y:y:moac_ctrl", "y:y:virtual_head_ctrl",
        "y:y:mech_head_ctrl", "y:y:mech_eyes_all_ctrl", "y:y:mech_eye_L_ctrl", "y:y:mech_upperLid_L_ctrl",
        "y:y:mech_lwrLid_L_ctrl", "y:y:eyeCorner_L_innerTop_ctrl", "y:y:eyeCorner_L_OuterTop_ctrl",
        "y:y:eyeCorner_L_OuterBtm_ctrl", "y:y:eyeCorner_L_innerBtm_ctrl", "y:y:mech_eye_R_ctrl",
        "y:y:mech_upperLid_R_ctrl", "y:y:mech_lwrLid_R_ctrl", "y:y:eyeCorner_R_innerTop_ctrl",
        "y:y:eyeCorner_R_OuterTop_ctrl", "y:y:eyeCorner_R_OuterBtm_ctrl",
        "y:y:eyeCorner_R_innerBtm_ctrl",
        "y:y:scanlines_ctrl", "y:y:virtual_arm_ctrl", "y:y:mech_arm_ctrl", "y:y:backpack_ctrl",
        "y:y:virtual_all_sub_ctrl",
        "y:y:virtual_prop_ctrl", "y:y:treads_L_lwr_ctrl", "y:y:treads_L_upr_ctrl",
        "y:y:virtual_backWheel_L_ctrl",
        "y:y:treads_R_upr_ctrl", "y:y:treads_R_lwr_ctrl", "y:y:virtual_backWheel_R_ctrl",
        "y:y:mech_all_ctrl",
        "y:y:data_node", "y:y:event_ctrl"};

        // check if wheels exist
        if (`objExists x:wheel_R_ctrl` && `objExists x:wheel_L_ctrl`)
        {
           appendStringArray($xC_selCoz_all_y, $wheels, 2);
        }
        else
        {
            print "This version of the rig doesn't have wheel controllers";
        }

        int $mods = `getModifiers`;
        if (($mods/1)%2==1)select -add $xC_selCoz_all_y; else select $xC_selCoz_all_y;
}

